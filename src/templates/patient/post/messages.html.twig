{% extends 'patient/base.patient.html.twig' %}

{% block content %}
<div class="container mx-auto py-10 px-4 max-w-5xl">
    <!-- Header -->
    <div class="flex justify-between items-center mb-10">
        <div>
            <h1 class="text-3xl font-semibold text-gray-900">Boîte de messagerie</h1>
            <p class="text-sm text-gray-500 mt-1">Consultez vos messages avec vos médecins</p>
        </div>
        <button id="newConversationBtn" class="inline-flex items-center gap-2 bg-indigo-600 text-white px-5 py-2.5 rounded-xl shadow hover:bg-indigo-700 transition">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            <span>Démarrer une conversation</span>
        </button>
    </div>

    <!-- Modal -->
    <div id="newConversationModal" class="hidden fixed inset-0 bg-gray-900/50 backdrop-blur-sm z-50 flex items-center justify-center p-4">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-lg p-6 space-y-4">
            <div class="flex justify-between items-center">
                <h2 class="text-xl font-semibold text-gray-800">Sélectionner un médecin</h2>
                <button id="closeModalBtn" class="text-gray-400 hover:text-gray-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            {% if availableDoctors|length > 0 %}
                <div class="space-y-3 overflow-y-auto max-h-[60vh] pr-1.5">
                    {% for doctor in availableDoctors %}
                        <a href="{{ path('app_start_conversation', {'id': doctor.id}) }}" class="flex items-center p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition">
                            <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 font-semibold text-xs mr-3">
                                {{ doctor.firstName|first|upper }}{{ doctor.lastName|first|upper }}
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-800">{{ doctor.firstName }} {{ doctor.lastName }}</p>
                                {% if doctor.specialty %}
                                    <p class="text-xs text-gray-500">{{ doctor.specialty }}</p>
                                {% endif %}
                            </div>
                        </a>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-12">
                    <p class="text-gray-500 font-medium">Aucun médecin disponible</p>
                    <p class="text-gray-400 text-sm mt-1">Veuillez réessayer plus tard</p>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Conversations list -->
    <div class="bg-white rounded-xl shadow border border-gray-100 overflow-hidden">
        {% if conversations|length > 0 %}
            <ul class="divide-y divide-gray-100">
                {% for message in conversations %}
                    {% set otherUser = message.sender == app.user ? message.receiver : message.sender %}
                    <li>
                        <a href="{{ path('app_conversation_patient', {'id': otherUser.id}) }}" class="flex items-center justify-between gap-4 px-6 py-5 transition hover:bg-indigo-50/30">
                            <div class="flex items-center gap-4">
                                <div class="h-12 w-12 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 font-bold text-sm">
                                    {{ otherUser.firstName|first|upper }}{{ otherUser.lastName|first|upper }}
                                </div>
                                <div>
                                    <p class="font-semibold text-gray-800">{{ otherUser.firstName }} {{ otherUser.lastName }}</p>
                                    <p class="text-sm text-gray-500 truncate">
                                        {% if message.sender == app.user %}
                                            <span class="text-indigo-600 font-medium">Vous :</span>
                                        {% endif %}
                                        {{ message.content }}
                                    </p>
                                </div>
                            </div>
                            <div class="text-right whitespace-nowrap">
                                <p class="text-xs text-gray-400">{{ message.sentAt|date('d/m/Y H:i') }}</p>
                                {% if message.receiver == app.user and not message.isRead %}
                                    <span class="inline-flex items-center justify-center h-5 w-5 rounded-full bg-red-500 text-white text-xs ml-auto">!</span>
                                {% endif %}
                            </div>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <div class="text-center py-16">
                <p class="text-lg font-medium text-gray-500">Aucune conversation</p>
                <p class="text-gray-400 mt-1">Démarrez une nouvelle conversation ci-dessous</p>
                <button id="emptyStateNewConvBtn" class="mt-6 bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition inline-flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
                    </svg>
                    Nouvelle conversation
                </button>
            </div>
        {% endif %}
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const modal = document.getElementById('newConversationModal');
        const openButtons = [
            document.getElementById('newConversationBtn'),
            document.getElementById('emptyStateNewConvBtn')
        ].filter(Boolean);
        const closeButton = document.getElementById('closeModalBtn');

        openButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                modal.classList.remove('hidden');
                document.body.style.overflow = 'hidden';
            });
        });

        function closeModal() {
            modal.classList.add('hidden');
            document.body.style.overflow = '';
        }

        closeButton.addEventListener('click', closeModal);

        modal.addEventListener('click', (e) => {
            if (e.target === modal) closeModal();
        });

        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
                closeModal();
            }
        });
    });
</script>

<style>
    #newConversationModal div[class*="overflow-y-auto"]::-webkit-scrollbar {
        width: 6px;
    }
    #newConversationModal div[class*="overflow-y-auto"]::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 3px;
    }
    #newConversationModal div[class*="overflow-y-auto"]::-webkit-scrollbar-thumb {
        background: #c7d2fe;
        border-radius: 3px;
    }
</style>
{% endblock %}
