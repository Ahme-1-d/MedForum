{% extends 'base.html.twig' %}

{% block title %}Liste des Commentaires{% endblock %}

{% block body %}
<div class="content-header d-flex justify-content-between align-items-center">
    <h1>Liste des Commentaires</h1>
    <a href="{{ path('app_comment_new') }}" class="btn btn-primary">
        <i class="fas fa-plus"></i> Ajouter Commentaire
    </a>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0">
            <thead>
                <tr>
                    <th>Médecin</th>
                    <th>Patient</th>
                    <th>Contenu</th>
                    <th>Date</th>
                    <th>Note</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.nomMedecin }}</td>
                    <td>{{ comment.nomPatient }}</td>
                    <td>{{ comment.contenu|slice(0, 100) ~ '...' }}</td>
                    <td>{{ comment.dateCreation|date('d/m/Y H:i') }}</td>
                    <td>
                        <div class="star-rating">
                            {% for i in 1..5 %}
                                {% if i <= comment.rating %}
                                    <i class="fas fa-star"></i>
                                {% else %}
                                    <i class="far fa-star"></i>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </td>
                    <td class="article-actions">
                        <a href="{{ path('app_comment_show', {'id': comment.id}) }}" class="btn btn-success" title="Voir">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="{{ path('app_comment_edit', {'id': comment.id}) }}" class="btn btn-primary" title="Modifier">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form method="post" action="{{ path('app_comment_delete', {'id': comment.id}) }}" style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                            <button class="btn btn-danger" title="Supprimer">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">Aucun commentaire trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(comments) }}
        </div>
    </div>
</div>
{% endblock %}
