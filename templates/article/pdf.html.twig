{% extends 'base.html.twig' %}

{% block title %}PDF Article{% endblock %}

{% block stylesheets %}
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
    }
    .header {
        text-align: center;
        margin-bottom: 30px;
    }
    .logo {
        max-width: 100px;
        margin-bottom: 10px;
    }
    h1 {
        color: #2c3e50;
        margin-bottom: 5px;
    }
    .category {
        color: #7f8c8d;
        font-style: italic;
        margin-bottom: 20px;
    }
    .content {
        line-height: 1.6;
    }
    .image {
        max-width: 100%;
        margin: 20px 0;
    }
    .footer {
        margin-top: 30px;
        text-align: center;
        font-size: 12px;
        color: #7f8c8d;
    }
</style>
{% endblock %}

{% block body %}
<div class="header">
    <img src="{{ absolute_url(asset('images/logo.png')) }}" alt="SahaCare Logo" class="logo">
    <h1>{{ article.titre }}</h1>
    <div class="category">Catégorie: {{ article.categorie }}</div>
</div>

<div class="content">
    {% if article.imageName %}
        <div style="text-align: center;">
            <img src="{{ absolute_url(asset('uploads/articles/' ~ article.imageName)) }}" alt="Image de l'article" class="image">
        </div>
    {% endif %}
    
    {{ article.content|raw }}
</div>

<div class="footer">
    <p>Document généré par SahaCare le {{ "now"|date("d/m/Y à H:i") }}</p>
    <p>Publié par: {{ article.username }}</p>
</div>
{% endblock %}
