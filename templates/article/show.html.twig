{% extends 'base.html.twig' %}

{% block title %}Détails de l'Article{% endblock %}

{% block body %}
<div class="content-header d-flex justify-content-between align-items-center">
    <h1>{{ article.titre }}</h1>
    <div>
        <a href="{{ path('app_article_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
        <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-primary">
            <i class="fas fa-edit"></i> Modifier
        </a>
        <a href="{{ path('app_article_pdf', {'id': article.id}) }}" class="btn btn-warning">
            <i class="fas fa-file-pdf"></i> Télécharger PDF
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Contenu de l'article</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Catégorie: {{ article.categorie }}</p>
                
                {% if article.imageName %}
                    <div class="text-center mb-4">
                        <img src="{{ asset('uploads/articles/' ~ article.imageName) }}" alt="Image de l'article" class="img-fluid" style="max-height: 300px;">
                    </div>
                {% endif %}
                
                <div>
                    {{ article.content|raw }}
                </div>
                
                <div class="text-muted mt-3">
                    <small>Publié par: {{ article.username }}</small>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Avis</h5>
            </div>
            <div class="card-body">
                {% if comments|length > 0 %}
                    {% for comment in comments %}
                        <div class="comment-card mb-3">
                            <div class="comment-header">
                                <div>
                                    <strong>{{ comment.nomMedecin }}</strong> - <span class="text-muted">{{ comment.nomPatient }}</span>
                                </div>
                                <div class="star-rating">
                                    {% for i in 1..5 %}
                                        {% if i <= comment.rating %}
                                            <i class="fas fa-star"></i>
                                        {% else %}
                                            <i class="far fa-star"></i>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="comment-body">
                                <p>{{ comment.contenu }}</p>
                                <small class="text-muted">{{ comment.dateCreation|date('d/m/Y H:i') }}</small>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <p class="text-center text-muted">Aucun avis pour cet article</p>
                {% endif %}
            </div>
        </div>
        
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Ajouter votre avis</h5>
            </div>
            <div class="card-body">
                {{ form_start(comment_form) }}
                    <div class="mb-3">
                        {{ form_label(comment_form.nom_medecin, 'Nom du médecin', {'label_attr': {'class': 'form-label required'}}) }}
                        {{ form_widget(comment_form.nom_medecin) }}
                        {{ form_errors(comment_form.nom_medecin) }}
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(comment_form.nom_patient, 'Nom du patient', {'label_attr': {'class': 'form-label required'}}) }}
                        {{ form_widget(comment_form.nom_patient) }}
                        {{ form_errors(comment_form.nom_patient) }}
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(comment_form.contenu, 'Commentaire', {'label_attr': {'class': 'form-label required'}}) }}
                        {{ form_widget(comment_form.contenu) }}
                        {{ form_errors(comment_form.contenu) }}
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(comment_form.rating, 'Note', {'label_attr': {'class': 'form-label required'}}) }}
                        {{ form_widget(comment_form.rating) }}
                        {{ form_errors(comment_form.rating) }}
                    </div>
                    
                    {{ form_widget(comment_form.article, {'attr': {'class': 'd-none'}}) }}
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Enregistrer
                        </button>
                    </div>
                {{ form_end(comment_form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
