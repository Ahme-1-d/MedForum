{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}
<div class="content-header d-flex justify-content-between align-items-center">
    <h1>Liste des Articles</h1>
    <a href="{{ path('app_article_new') }}" class="btn btn-primary">
        <i class="fas fa-plus"></i> Ajouter Article
    </a>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-striped table-hover article-list mb-0">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Catégorie</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.titre }}</td>
                    <td>{{ article.categorie }}</td>
                    <td>{{ article.content|striptags|slice(0, 150) ~ '...' }}</td>
                    <td class="article-actions">
                        <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-success" title="Voir">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-primary" title="Modifier">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="{{ path('app_article_pdf', {'id': article.id}) }}" class="btn btn-warning" title="Télécharger PDF">
                            <i class="fas fa-file-pdf"></i>
                        </a>
                        <form method="post" action="{{ path('app_article_delete', {'id': article.id}) }}" style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                            <button class="btn btn-danger" title="Supprimer">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">Aucun article trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(articles) }}
        </div>
    </div>
</div>
{% endblock %}
